@model TeledocTestProject.Models.Founder

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Founder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Имя</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecondName" class="control-label">Отчество</label>
                <input asp-for="SecondName" class="form-control" />
                <span asp-validation-for="SecondName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Фамилия</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EntityClientId" class="control-label">Клиент</label>
                @Html.DropDownListFor(m => m.EntityClientId, ViewBag.Clients as SelectList)
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Inn" class="control-label">ИНН</label>
                <input asp-for="Inn" class="form-control" />
                <span asp-validation-for="Inn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateDate" class="control-label">Время добавления</label>
                <input asp-for="CreateDate" class="control-label" readonly/>                
            </div>
            <div class="form-group">
                <label asp-for="UpdateDate" class="control-label">Время последнего обновления</label>
                <input asp-for="UpdateDate" class="form-control" readonly/>                
            </div>
            <div class="form-group">
                <input type="submit" value="Принять" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

